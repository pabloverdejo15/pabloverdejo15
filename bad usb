# Inicialización del Flipper Zero
flipper = Flipper()

# Conexión a tu iPhone (Asegúrate de que tu iPhone esté emparejado previamente)
iphone_address = "xx:xx:xx:xx:xx:xx"  # Dirección Bluetooth de tu iPhone
flipper.bluetooth.connect(iphone_address)

# Envío de la nota de hackeo
message = "Has sido hackeado"
send_notification(message)

# Desconexión del Flipper Zero
flipper.bluetooth.disconnect()

# Espera antes de finalizar el script
sleep(5)
